<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:ViewModel;assembly=ViewModel"
        x:Class="View.Windows.ConnectionSettingsWindow"
        x:DataType="ViewModel:ConnectionWindowViewModel"
        Height="150"
        Width="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Connection Settings"
>
    <Border Background="#f8f9fa" Padding="20">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="10">
            <TextBlock Grid.Row="0">
                Enter connection string:
            </TextBlock>
            <TextBox Name="CnnStrInput"
                     Grid.Row="1"
                     Watermark="Host=localhost;Port=5432;Database=db;User=postgres;Password=qwerty" />
            <ComboBox Grid.Row="2"
                      Width="200"
                      Items="{Binding AvailableDbs}"
                      SelectedItem="{Binding SelectedDb, Mode=TwoWay}"
                      Name="SelectDb"
            />
            <Button Grid.Row="3" Click="OnConfirmClick">
                Confirm
            </Button>
            <TextBlock Name="ErrorText" Foreground="Red" Grid.Row="4"/>
        </Grid>
    </Border>
</Window>